<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="Sabina" id="reportdata-1">
        <createSequence incrementBy="1" sequenceName="reportdata_seq" startValue="1"/>
    </changeSet>

    <changeSet author="Sabina" id="reportdata-2">
        <createTable tableName="reportdata">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="reportdataPK"/>
            </column>
            <column name="year" type="VARCHAR(256)"/>
            <column name="region" type="VARCHAR(256)"/>
            <column name="deaths" type="VARCHAR(256)"/>
            <column name="number_of_fires" type="VARCHAR(256)"/>
            <column name="amount_of_damage" type="VARCHAR(256)"/>
            <column name="injured" type="VARCHAR(256)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>