<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="Sabina" id="organization-1">
        <createSequence incrementBy="1" sequenceName="organization_seq" startValue="1"/>
    </changeSet>

    <changeSet author="Sabina" id="organization-2">
        <createTable tableName="organization">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="organizationPK"/>
            </column>
            <column name="full_name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="bin" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="created" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="modified" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>